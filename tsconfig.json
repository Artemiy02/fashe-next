{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "components/*": ["./components/*"],
      "styles/*": ["./styles/*"],
      "services/*": ["./services/*"],
      "utils/*": ["./utils/*"],
      "actions/*": ["./actions/*"],
      "reducers/*": ["./reducers/*"],
      "selectors/*": ["./selectors/*"],
      "types/*": ["./types/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "./**/*.ts", "./**/*.tsx"]
}
